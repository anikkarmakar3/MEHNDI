<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_root"
    style="@style/myDashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/user_name"
            style="@style/myText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Anil Kapoor"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_email"
                style="@style/myText4"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="abcde@gmail.com" />

            <TextView
                android:id="@+id/user_number"
                style="@style/myText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="1234567890" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProfit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                style="@style/myText4"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Profit from this user" />

            <TextView
                android:id="@+id/tvProfit"
                style="@style/myText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="" />

        </LinearLayout>

        <Button
            android:id="@+id/btnBlockUsers"
            style="@style/myButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Block User"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
